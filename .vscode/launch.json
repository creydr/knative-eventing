    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Channel Controller",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/in_memory/channel_controller/main.go",
            "envFile": "${workspaceFolder}/imc-controller.env",
            "preLaunchTask": "intercept-imc-controller",
            "postDebugTask": "quit-telepresence",
        },
        {
            "name": "Launch Eventing Controller",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/controller/main.go",
            "envFile": "${workspaceFolder}/eventing-controller.env",
            "preLaunchTask": "intercept-eventing-controller",
            "postDebugTask": "quit-telepresence",
        },
        {
            "name": "Launch Eventing Webhook",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/webhook/main.go",
            "envFile": "${workspaceFolder}/eventing-webhook.env",
            "preLaunchTask": "intercept-eventing-webhook",
            "postDebugTask": "quit-telepresence",
        },
        {
            "name": "Launch Eventing Broker-Filter",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/broker/filter/main.go",
            "envFile": "${workspaceFolder}/broker-filter.env",
            "preLaunchTask": "intercept-broker-filter",
            "postDebugTask": "quit-telepresence",
        },
        {
            "name": "Launch Eventing IMC dispatcher",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/in_memory/channel_dispatcher/main.go",
            "envFile": "${workspaceFolder}/imc-dispatcher.env",
            "preLaunchTask": "intercept-imc-dispatcher",
            "postDebugTask": "quit-telepresence",
        },
    ]
}
